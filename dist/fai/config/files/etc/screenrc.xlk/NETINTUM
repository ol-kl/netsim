escape `~

startup_message off
hardstatus alwayslastline "%{=b WR} %H %{= wk} %=[%l]%=%{-} %LD, %LM %d, %Y - %c:%s "
caption always "%?%F%{= BY} %:%{= wK} %?%-Lw %{!r} %n%f %t %{-} %+Lw%=%? [%h]%?"
bind = resize =
bind + resize +3
bind - resize -3

unsetenv SSH_AUTH_SOCK
setenv SSH_AUTH_SOCK $HOME/.screen/ssh-auth-sock.$HOSTNAME
